@model IEnumerable<CaffeineFix.Models.StoreViewModel>

@if (Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <div class="col-12 px-2">
            <div class="card mb-2">
                <div class="row">
                    <div class="col-2">
                        <img src="@item.ImagePath" class="card-img-top border-right" alt="...">
                    </div>
                    <div class="col-7 mt-3">
                        <h5><b>@item.ProductName</b></h5><br />
                    </div>
                    <div class="col-3">
                        <h5 class="float-right mt-3 mr-3">&#8369; @item.Price</h5>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <p class="px-3">There are no products to be displayed</p>
}