@model IEnumerable<CaffeineFix.Models.ProductViewModel>

<table class="table table-bordered">
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td><b>Name</b></td>
                <td>@item.ProductName</td>
            </tr>
            <tr>
                <td><b>Category</b></td>
                <td>@item.ProductCategoryName</td>
            </tr>
            <tr>
                <td><b>Description</b></td>
                <td>@item.Description</td>
            </tr>
            <tr>
                <td><b>Price</b></td>
                <td>&#8369; @item.Price</td>
            </tr>
            if (item.ProductCategoryName == "Coffee")
            {
                <tr>
                    <td><b>Roast Level</b></td>
                    <td>@item.RoastLevelLabel</td>
                </tr>
            }
            else if (item.ProductCategoryName == "Equipment")
            {
                <tr>
                    <td><b>Type</b></td>
                    <td>@item.EquipmentTypeLabel</td>
                </tr>
            }
            else
            {
                <tr>
                    <td><b>Type</b></td>
                    <td>@item.DrinkwareTypeLabel</td>
                </tr>
            }
        }
    }
</table>

